<h1>Especializações</h1>

<div class="modulo">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @specializations.each do |specialization| %>
        <tr>
          <td><%= specialization.description %></td>
          <td><%= link_to t('edit'), edit_specialization_path(specialization) %></td>
          <td><%= link_to t('destroy'), specialization, method: :delete, data: { confirm: 'are_you_sure' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Nova Especialização', new_specialization_path %>
