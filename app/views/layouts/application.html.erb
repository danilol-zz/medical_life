<!DOCTYPE html>
<html>
  <head>
    <title>MedicalLife</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag "favicon.ico" %>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">x</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Medical Life</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Cadastros<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Usuários", users_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Médicos", doctors_path %></li>
                <li><%= link_to "Especialidades", specializations_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Consultas", medical_consultations_path %></li>
                <li><%= link_to "Nova Consulta", new_medical_consultation_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Anotacoes", new_notepad_path %></li>
              </ul>
            </li>
            <% if @current_user and @current_user.admin? %>
              <li class="active"><a href="/users">Usuários </a></li>
            <% end %>
          </ul>
          <% if session[:user_id] %>
          <ul class="nav navbar-nav navbar-right">
            <a class="navbar-text" href=<%= "/users/#{@current_user.id}/edit"%>> <%= @current_user.name %> | <%= @current_user.email %></a>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        <% end %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
