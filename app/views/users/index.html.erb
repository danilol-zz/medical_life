<div class="modulo">
  <div class="row-fluid">
    <h3>Usu√°rios</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Papel</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if @current_user.admin? %>
                <%= link_to user.name, edit_user_path(user.id) %>
              <% else %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <% if @current_user.admin? %>
              <td><%= link_to t("reset_password"), controller: "users", action: "remember_password_index", id: user.id %>
              <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('are_you_sure') } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
