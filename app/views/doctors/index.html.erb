<h1>Médicos</h1>
<div class="modulo">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Especializações</th>
        <th>Email</th>
        <th>Website</th>
        <th>CRM</th>
        <th>Endereço</th>
        <th>Tel 1</th>
        <th>Tel 2</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.name %></td>
          <td><%= doctor.specializations.collect(&:description).join(",") %></td>
          <td><%= doctor.email %></td>
          <td><%= doctor.website %></td>
          <td><%= doctor.crm_number %></td>
          <td><%= doctor.address %></td>
          <td><%= doctor.phone1 %></td>
          <td><%= doctor.phone2 %></td>
          <td><%= link_to t('edit'), edit_doctor_path(doctor) %></td>
          <td><%= link_to t('destroy'), doctor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

